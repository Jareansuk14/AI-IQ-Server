{
  "name": "line-image-bot",
  "version": "2.0.0",
  "description": "LINE chatbot with AI image processing, Forex prediction, Referral system and LIFF Apps",
  "main": "server.js",
  "engines": {
    "node": "18.x",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "start": "node server.js",
    "server": "nodemon server.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "client": "npm start --prefix client",
    "build": "npm run build:client",
    "build:client": "cd client && npm run build",
    "install:all": "npm install && if [ -d \"client\" ]; then cd client && npm install; fi",
    "setup": "npm run install:all && npm run build:client",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "create-rich-menu": "CREATE_RICH_MENU=true node server.js",
    "db:seed": "node scripts/seedDatabase.js",
    "check-system": "curl -s http://localhost:3000/api/test/full-system | jq ."
  },
  "keywords": [
    "LINE Bot",
    "AI",
    "Forex",
    "Image Analysis",
    "LIFF",
    "Referral System",
    "MongoDB",
    "Node.js",
    "Express"
  ],
  "dependencies": {
    "@anthropic-ai/sdk": "^0.50.4",
    "@line/bot-sdk": "^7.5.2",
    "axios": "^1.9.0",
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.0.3",
    "multer": "^1.4.5-lts.1",
    "openai": "^4.98.0",
    "promptpay-qr": "^0.5.0",
    "qrcode": "^1.5.4",
    "node-cron": "^3.0.2",
    "crypto": "^1.0.1",
    "moment": "^2.29.4",
    "moment-timezone": "^0.5.43",
    "sharp": "^0.32.5",
    "form-data": "^4.0.0",
    "ws": "^8.13.0",
    "compression": "^1.7.4",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.4",
    "imap": "^0.8.19",
    "mailparser": "^3.6.5"
  },
  "devDependencies": {
    "concurrently": "^8.0.1",
    "nodemon": "^2.0.22",
    "jest": "^29.6.4",
    "supertest": "^6.3.3",
    "eslint": "^8.48.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-n": "^16.0.2",
    "eslint-plugin-promise": "^6.1.1",
    "@types/node": "^20.5.9"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/node_modules/**",
      "!**/client/**",
      "!**/assets/**",
      "!**/public/**"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2021": true,
      "jest": true
    },
    "extends": [
      "standard"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "no-console": "off",
      "no-unused-vars": "warn",
      "space-before-function-paren": "off"
    }
  }
}